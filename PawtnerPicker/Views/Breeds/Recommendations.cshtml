@using PawtnerPicker.Data
@using PawtnerPicker.Models.Domain
@model List<PawtnerPicker.Models.Domain.Breed>

@{
    ViewBag.Title = "Recommendations";
}

<h1>Twój wybrany piesek to:</h1>
<a href="Details/@Model[0].Id" style="text-decoration: none; color: black">
    <div class="row">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <img src="@await FetchImage.GetImageUrl(Model[0].BreedName)" class="card-img-top" alt="">
                    <h5 class="card-title mt-2">@Model[0].BreedName</h5>
                </div>
            </div>
        </div>
    </div>
</a>

<h2 class="mt-4">Możesz również zainteresować się:</h2>
<div class="row">
    @{
        foreach (var i in Model.Skip(1))
        {
            <div class="col-md-4" style="width: 25%">
                <a href="@("Details/" + i.Id)" style="text-decoration: none; color: black">
                    <div class="card h-100">
                        <div class="card-body">
                            <img src="@await FetchImage.GetImageUrl(i.BreedName)" class="card-img-top" alt="">
                            <h5 class="card-title mt-2">@i.BreedName</h5>
                        </div>
                    </div>
                </a>
            </div>
        }
    }
</div>
@model PawtnerPicker.Models.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
}
<div style="text-align-last:center;">
    <h2>Sign In</h2>
</div>

<div class="login">
    <form action="Login" method="post">
        <p class="text-danger">@TempData["ErrorLogin"]</p>
        <label><b>Username</b></label>
        <input type="text" placeholder="Username" id="Uname" asp-for="Login">
        <br/><br/>
        <label><b>Password</b></label>
        <input type="password" autocomplete="off" placeholder="Password" id="Pass" asp-for="Password">
        <br/><br/>
        <button type="submit" value="Login" name="value" id="log">Login</button>
        <br/><br/>
        <input type="checkbox" asp-for="Remember">
        <span>Remember me</span>
    </form>
</div>


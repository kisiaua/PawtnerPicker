@model PawtnerPicker.Models.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div style="text-align-last:center;">
    <h2>Register</h2>
</div>
<div class="login">
<form action = "Register" method="post">
        <label><b>Username</b></label>
        <input type="text" placeholder = "Username" id="Uname" asp-for="Login" required>
        <br /><br />
        <label><b>Password</b></label>
        <input type="password" autocomplete="off" placeholder = "Password" id="Pass" asp-for="Password" required>
        <br /><br />
        <label><b>ConfirmPassword</b></label>
        <input type="password" autocomplete="off" placeholder = "Password" id="Pass" asp-for="ConfirmPassword" required>
        <br /><br />
        <button type="submit" value="Login" name="value" id="log">Register</button>
</form>
</div>
